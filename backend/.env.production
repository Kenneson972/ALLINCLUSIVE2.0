# CONFIGURATION PRODUCTION - KhanelConcept API
# ⚠️ ATTENTION: Modifier toutes les valeurs avant déploiement

# Base de données MongoDB
MONGO_URL=mongodb://localhost:27017/khanelconcept

# JWT Configuration
JWT_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-IN-PRODUCTION-64-CHARS-MIN
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE-THIS-ADMIN-PASSWORD-STRONG
ADMIN_SECRET_KEY=CHANGE-THIS-ADMIN-SECRET-KEY-IN-PRODUCTION-64-CHARS
ADMIN_2FA_SECRET=CHANGE-THIS-2FA-SECRET-KEY-32-CHARS

# Email Configuration
EMAIL_FROM=contact@yourdomain.com
EMAIL_PASSWORD=your-email-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false

# Sécurité Générale
SECURITY_SALT=CHANGE-THIS-SECURITY-SALT-32-CHARS
ENCRYPTION_KEY=CHANGE-THIS-ENCRYPTION-KEY-32-CHARS
LOGS_LEVEL=INFO
ENABLE_2FA=true

# Environnement
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Stripe (si utilisé)
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXX

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=WARNING